		"@produck/eslint-rules": "^0.2.6",
		"@types/node": "^25.2.1",
		"c8": "^10.1.3",
		"eslint": "^9.39.2",
		"globals": "^17.3.0",
		"lerna": "^9.0.3",
		"typescript-eslint": "^8.54.0"
	}
}
